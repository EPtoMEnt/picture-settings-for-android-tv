<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="@string/offset">
    <SeekBarPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:key="tuner_offset_red"
        app:defaultValue="50"
        app:persistent="false"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:title="@string/red" />
    <SeekBarPreference
        app:defaultValue="50"
        app:key="tuner_offset_green"
        app:persistent="false"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:title="@string/green" />
    <SeekBarPreference
        app:defaultValue="50"
        app:key="tuner_offset_blue"
        app:persistent="false"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:title="@string/blue" />
</PreferenceScreen>